<?xml version='1.0' encoding='utf8'?>
<LexicalResource dtdVersion="16">
  <GlobalInformation>
    <feat att="languageCoding" val="ISO 639-3" />
  </GlobalInformation>
  <Lexicon xmlns:karp="http://spraakbanken.gu.se/eng/research/infrastructure/karp/karp"
  xmlns:konst="http://spraakbanken.gu.se/swe/resurs/konstruktikon"
  xmlns:rusfn="http://spraakbanken.gu.se/swe/resurs/rusfn">
    <feat att="language" val="swe" />
    <LexicalEntry xml:lang="rus">
      <Lemma />
      <Sense id="konstruktikon-rus--чем_тем">
        <feat att="cat" val="S" />
        <feat att="illustration" val="чем больше тем лучше" />
        <feat att="structure"
        val="[чем..2 Adj,,comp (XP) тем..1 Adj,,comp (XP)] | [чем..2 &amp;quot;более&amp;quot;|&amp;quot;менее&amp;quot; XP тем..1 &amp;quot;более&amp;quot;|&amp;quot;менее&amp;quot; XP]" />
        <feat att="coll" val="более..1" />
        <feat att="coll" val="менее..1" />
        <feat att="coll" val="больше" />
        <feat att="coll" val="меньше" />
        <feat att="type" val="konstruktion" />
        <feat att="type" val="jämförelse" />
        <feat att="cee" val="чем..2" />
        <feat att="cee" val="тем..1" />
        <feat att="evokes" val="Change_position_on_a_scale" />
        <karp:example>
          <karp:text>Мы просто хотели записаться и выйти на путь
          и</karp:text>
          <karp:e name="чем_тем">
            <karp:e name="cee">Чем</karp:e>
            <karp:text />
            <karp:e name="Property">быстрее</karp:e>
            <karp:text>,</karp:text>
            <karp:e name="cee">тем</karp:e>
            <karp:text />
            <karp:e name="Property">лучше</karp:e>
            <karp:text />
          </karp:e>
          <karp:text>!</karp:text>
        </karp:example>
        <karp:example>
          <karp:text n="0">Считалось, что</karp:text>
          <karp:e n="1" name="чем_тем">
            <karp:e n="0" name="cee">чем</karp:e>
            <karp:text n="1">больше откусывали,</karp:text>
            <karp:e n="2" name="cee">тем</karp:e>
            <karp:text n="3">богаче будет урожай</karp:text>
          </karp:e>
          <karp:text n="2">этом году.</karp:text>
        </karp:example>
        <definition>
          <karp:text n="0">Конструкция выражает пропорциональную
          зависимость между двумя или более событиями.
          Постепенное</karp:text>
          <karp:e n="1" name="Property">увеличение или уменьшение
          фактора</karp:e>
          <karp:text n="2">в</karp:text>
          <karp:e n="3" name="Event">первом событии</karp:e>
          <karp:g n="4" />
          <karp:text n="5">, которое начинается с "</karp:text>
          <karp:g n="6" />
          <karp:e n="7" name="чем..1">чем</karp:e>
          <karp:g n="8" />
          <karp:text n="9">", приводит к</karp:text>
          <karp:e n="10" name="Property">соответствующему
          изменению</karp:e>
          <karp:text n="11">во</karp:text>
          <karp:e n="12" name="Event">втором событии</karp:e>
          <karp:g n="13" />
          <karp:text n="14">, которое начинается с "</karp:text>
          <karp:g n="15" />
          <karp:e n="16" name="тем..1">тем</karp:e>
          <karp:g n="17" />
          <karp:text n="18">".</karp:text>
        </definition>
        <konst:int_const_elem cat="Adv" lu="чем..1"
        name="чем..1" />
        <konst:int_const_elem cat="Adv" lu="тем..1"
        name="тем..1" />
        <konst:int_const_elem cat="AP" name="Property"
        role="Property" />
        <konst:int_const_elem cat="VP" name="Event" role="Event" />
        <konst:int_const_elem cat="NP" name="Entity"
        role="Entity" />
      </Sense>
    </LexicalEntry>
    <LexicalEntry xml:lang="rus">
      <Lemma />
      <Sense id="konstruktikon-rus--мы с кем-то">
        <feat att="illustration" val="мы с друзьями" />
        <feat att="structure"
        val="[NP мы [PP [Adpos с] [NP кем-то]]" />
        <feat att="type" val="konstruktion" />
        <karp:example>
          <karp:text n="0">Я часто бываю в Киеве,</karp:text>
          <karp:e n="1" name="мы_с_кем-то">
            <karp:e n="0" name="Actor">мы</karp:e>
            <karp:text n="1" />
            <karp:e n="2" name="cee">с</karp:e>
            <karp:text n="3">друзьями</karp:text>
          </karp:e>
          <karp:g n="2" />
          <karp:text n="3">гуляем по улицам, тем более что там в
          эти выходные была хорошая погода.</karp:text>
        </karp:example>
        <konst:int_const_elem cat="Pron"
        msd="PronType=Pers|Person=3|Number=Plur" name="Actor"
        role="Actor" />
      </Sense>
    </LexicalEntry>
    <LexicalEntry xml:lang="rus">
      <Lemma />
      <Sense id="konstruktikon-rus--NP num">
        <feat att="cat" val="NP" />
        <feat att="illustration" val="человек сорок" />
        <feat att="structure" val="[[NP ] num]" />
        <feat att="type" val="konstruktion" />
        <karp:example>
          <karp:text n="0">Я работаю в нефтяной промышленности 54
          года и</karp:text>
          <karp:e n="1" name="NP_num">
            <karp:e n="0" name="Entity">лет</karp:e>
            <karp:text n="1" />
            <karp:e n="2" name="Quantity">сорок</karp:e>
            <karp:text n="3" />
          </karp:e>
          <karp:text n="2">уже слышу, что завтра нефть в нашем
          регионе должна кончиться.</karp:text>
        </karp:example>
        <definition>
          <karp:text n="0">Если</karp:text>
          <karp:e n="1" name="Quantity">числительное</karp:e>
          <karp:text n="2">стоит не перед</karp:text>
          <karp:e n="3" name="Entity">существительным</karp:e>
          <karp:g n="4" />
          <karp:text n="5">, к</karp:text>
          <karp:e n="6" name="Entity">которому</karp:e>
          <karp:text n="7">оно относится, а после</karp:text>
          <karp:e n="8" name="Entity">него</karp:e>
          <karp:g n="9" />
          <karp:text n="10">, то оно называет не точное</karp:text>
          <karp:e n="11" name="Quantity">количество</karp:e>
          <karp:g n="12" />
          <karp:text n="13">, а примерное.</karp:text>
        </definition>
        <konst:int_const_elem cat="Num" name="Quantity"
        role="Quantity" />
        <konst:int_const_elem cat="NP" name="Entity"
        role="Entity" />
      </Sense>
    </LexicalEntry>
  </Lexicon>
</LexicalResource>
